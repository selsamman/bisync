{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    // TS-Node (subcommands)
    {
      "name": "Daemon [Debug]",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceRoot}/sync.ts", "daemon"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      // "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Stop [Debug]",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceRoot}/sync.ts", "stop"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      // "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Start [Debug]",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceRoot}/sync.ts", "start"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      // "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    },

    // Jest (tests)
    {
      "name": "Jest single run all tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "env": { "CI": "true" },
      "args": [
        //   "-c",
        //   "./jest.config.js",
        "--verbose",
        "-i",
        "--no-cache"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Jest watch all tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "args": [
        //   "-c",
        //   "./jest.config.js",
        "--verbose",
        "-i",
        "--no-cache",
        "--watchAll"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Jest watch current file",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": [
        "${fileBasename}",
        //   "-c",
        //   "./jest.config.js",
        "--verbose",
        "-i",
        "--no-cache",
        "--watchAll"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },

    // TS-Node (Current File)
    {
      "name": "ts-node (Current File)",
      "type": "node",
      "request": "launch",
      "args": ["${relativeFile}"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      // "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
